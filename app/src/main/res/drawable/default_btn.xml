<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="600" android:exitFadeDuration="600">
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="10dp" />
            <gradient android:angle="0" android:endColor="#00dbde" android:startColor="@color/pink" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/pink" />
        </shape>
    </item>
</selector>