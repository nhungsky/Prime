<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.enternumber.EnterNumberActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/primelogo" />

        <EditText
            android:id="@+id/aenEdtNumberInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/default_edt"
            android:hint="Xin mời nhập vào!"
            android:inputType="text"
            android:padding="15dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/aenBtnCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/default_btn"
            android:padding="15dp"
            android:text="Kiểm tra"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/aenTvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/top_line"
        android:padding="30dp"
        android:text="Chưa có kết quả"
        android:textAlignment="center"
        android:textColor="#f02f8c"
        android:textSize="20sp" />

</RelativeLayout>